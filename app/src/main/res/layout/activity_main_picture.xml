<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent"
    tools:context="com.example.sucharita.cameraapp.MainActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:padding="@dimen/_5sdp"
        android:background="#66000000"
        android:orientation="vertical"
        android:weightSum="3">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <com.example.sucharita.cameraapp.RoundedImageView
                android:id="@+id/one"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/nomage"
                android:scaleType="centerCrop"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/one_select"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="fitCenter"
                android:src="@drawable/select"
                android:visibility="gone"
                tools:ignore="VectorDrawableCompat" />
        </FrameLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.example.sucharita.cameraapp.RoundedImageView
                android:id="@+id/two"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/nomage"
                android:scaleType="centerCrop"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/two_select"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:clickable="false"
                android:focusable="false"
                android:visibility="gone"
                android:focusableInTouchMode="false"
                android:scaleType="fitCenter"
                android:src="@drawable/select"
                tools:ignore="VectorDrawableCompat" />
        </FrameLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <com.example.sucharita.cameraapp.RoundedImageView
                android:id="@+id/three"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/nomage"
                android:scaleType="centerCrop"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/three_select"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="fitCenter"
                android:src="@drawable/select"
                android:visibility="gone"
                tools:ignore="VectorDrawableCompat" />
        </FrameLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.example.sucharita.cameraapp.RoundedImageView
                android:id="@+id/four"
                android:layout_width="@dimen/_55sdp"
                android:layout_height="@dimen/_45sdp"
                android:src="@drawable/nomage"
                android:scaleType="centerCrop"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/four_select"
                android:layout_width="@dimen/_45sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_gravity="center"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="fitCenter"
                android:src="@drawable/select"
                android:visibility="gone"
                tools:ignore="VectorDrawableCompat" />
        </FrameLayout>
    </LinearLayout>
    <include
        layout="@layout/layout_camera_photo" />

</LinearLayout>
